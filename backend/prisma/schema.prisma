generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid                 String      @id @default(uuid())
  username             String
  useremail            String      @unique
  clerkId              String      @unique
  password             String?
  plan                 String      @default("free")
  questionsContributed Int         @default(0)
  levelsDone           Int         @default(0)

  // Relations
  topics    Topic[]
  questions Question[]

  createdAt DateTime   @default(now())
}

model Topic {
  topicId  String     @id @default(uuid())
  name     String
  userId   String
  techId   String

  // Relations
  user     User       @relation(fields: [userId], references: [uuid])
  tech     Tech       @relation(fields: [techId], references: [techId])
  resources Resource[]
  questions Question[]
}

model Tech {
  techId    String     @id @default(uuid())
  techName  String

  // Relations
  topics    Topic[]
}

model Resource {
  rid       String   @id @default(uuid())
  resource  String
  topicId   String

  topic     Topic    @relation(fields: [topicId], references: [topicId])
}

model Question {
  qid       String   @id @default(uuid())
  question      String
  topicId   String
  userId    String

  // Relations
  topic     Topic    @relation(fields: [topicId], references: [topicId])
  user      User     @relation(fields: [userId], references: [uuid])

  createdAt DateTime @default(now())
}
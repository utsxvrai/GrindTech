generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User {
  uuid                 String     @id @default(uuid())
  username             String
  useremail            String     @unique
  password             String?
  plan                 String     @default("free")
  questionsContributed Int        @default(0)
  levelsDone           Int        @default(0)
  createdAt            DateTime   @default(now())
  clerkId              String     @unique
  questions            Question[]
  topics               Topic[]
  progress             UserProgress[]
  levelCompletions     UserLevelCompletion[]
}

model Topic {
  topicId   String     @id @default(uuid())
  name      String
  userId    String
  techId    String
  questions Question[]
  resources Resource[]
  tech      Tech       @relation(fields: [techId], references: [techId])
  user      User       @relation(fields: [userId], references: [uuid])
}

model Tech {
  techId   String  @id @default(uuid())
  techName String
  topics   Topic[]
}

model Resource {
  rid      String @id @default(uuid())
  resource String
  topicId  String
  name     String
  topic    Topic  @relation(fields: [topicId], references: [topicId])
}

model Question {
  qid       String   @id @default(uuid())
  question  String
  topicId   String
  userId    String
  createdAt DateTime @default(now())
  topic     Topic    @relation(fields: [topicId], references: [topicId])
  user      User     @relation(fields: [userId], references: [uuid])
  progress  UserProgress[]
}

model UserProgress {
  id         String   @id @default(uuid())
  userId     String
  questionId String
  techId     String
  topicId    String
  score      Int?
  answeredAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [uuid], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [qid], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId, techId, topicId])
  @@index([userId, techId])
}

model UserLevelCompletion {
  id         String   @id @default(uuid())
  userId     String
  techId     String
  topicId    String
  completedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [uuid], onDelete: Cascade)

  @@unique([userId, techId, topicId])
  @@index([userId, techId])
}
